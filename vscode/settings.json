{
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorStyle": "line",
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "files.autoSave": "afterDelay",
  "github.copilot.enable": { "*": true, "yaml": true, "plaintext": false, "markdown": false },
  "godot_tools.editor_path": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
  "openInGitHub.defaultBranch": "main",
  "openInGitHub.repositoryType": "github",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.fontSize": 13,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false
  },
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.env.windows": {

  },
  "ruby.useLanguageServer": false,
  "ruby.lint": {
    "rubocop": false
  },
  "ruby.codeCompletion": false,
  "ruby.intellisense": false,
  "ruby.format": false,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": false
  },
  "byesig.fold": false,
  "byesig.enabled": true,
  "byesig.opacity": 0.5,
  "byesig.showIcon": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "terminal.integrated.localEchoEnabled": "off",
  "workbench.colorTheme": "Default Light+",
  "editor.fontSize": 14,
  "diffEditor.renderSideBySide": false
}
